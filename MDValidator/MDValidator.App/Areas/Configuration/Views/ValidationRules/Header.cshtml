@using MDValidator.App.Models
@using MDValidator.App.Areas.Configuration.Models.ValidationRules
@using MDValidator.Domain.Configuration.ValidationRules

@model HeadersViewModel

@{
    ViewData["Title"] = "Header-Validation Rules";
}

@if (Model.Errors != null && Model.Errors.Count > 0)
{
    @await Html.PartialAsync("_ErrorSummary", Model.Errors)
}

<section class="controls well well-lg">
    @await Html.PartialAsync("_FileUploadControl", new FileUploadControlViewModel("Upload Header File"))
    <button class="btn btn-success"><i class="fa fa-download fa-fw"></i> Download</button>&nbsp;&nbsp;
    <button class="btn btn-primary" onclick="saveRuleConfiguration('/Configuration/ValidationRules/SaveHeader')"><i class="fa fa-save fa-fw"></i> Save</button>
</section>

<br />

@if ((Model.Errors != null && Model.Errors.Count == 0) && (Model.Headers != null && Model.Headers.Count > 0))
{
    <div class="table-responsive">
        <table class="table table-condensed table-bordered table-hover table-striped">
            <tr>
                <th class="bg-primary">
                    VALID
                </th>
                <th class="bg-primary">
                    VALTXT
                </th>
                <th class="bg-primary">
                    READID
                </th>
                <th class="bg-primary">
                    EXTRID
                </th>
                <th class="bg-primary">
                    ROUTINE
                </th>
                <th class="bg-primary">
                    ORIGIN
                </th>
                <th class="bg-primary">
                    DESTINATION
                </th>
                <th class="bg-primary">
                    MTART
                </th>
                <th class="bg-primary">
                    LEG
                </th>
                <th class="bg-primary">
                    SITE
                </th>
                <th class="bg-primary">
                    SYSID
                </th>
                <th class="bg-primary">
                    DATE
                </th>
                <th class="bg-primary">
                    TIME
                </th>
                <th class="bg-primary">
                    USER
                </th>
            </tr>

            @foreach (Header header in Model.Headers)
            {
                <tr>
                    <td>@header.ValId</td>
                    <td>@header.ValTxt</td>
                    <td>@header.ReadId</td>
                    <td>@header.ExtrID</td>
                    <td>@header.Routine</td>
                    <td>@header.Origin</td>
                    <td>@header.Destination</td>
                    <td>@header.MTART</td>
                    <td>@header.Leg</td>
                    <td>@header.Site</td>
                    <td>@header.SysId</td>
                    <td>@header.DateTime.ToString("mm/dd/yy")</td>
                    <td>@header.DateTime.ToString("hh:mm:ss")</td>
                    <td>@header.User</td>
                </tr>
            }
        </table>
    </div>
        
}

